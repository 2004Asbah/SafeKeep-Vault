FROM python:3.11-slim

WORKDIR /app

# Copy frontend requirements
COPY frontendd/requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy frontend code
COPY frontendd/ ./frontendd/
COPY .streamlit/ ./.streamlit/

# Expose port
EXPOSE 8501

# Run Streamlit with PORT from environment (Render provides this)
CMD streamlit run frontendd/app.py --server.port=${PORT:-8501} --server.address=0.0.0.0
